@model IEnumerable<InventoryManagementSystem.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}
@section style
    {
    <style>
        .en {
            color: #4CAF50;
        }

        .ds {
            color: #C9302C;
        }
    </style>

}

<h4 style="display:inline;float:left;margin-bottom:5px;"><i class="fas fa-list-ul"></i>Users : @ViewBag.UserList</h4>
<h4 style="display: inline; float: right; margin-bottom: 5px;">
    <a href="@Url.Action("Create","User")" class=""><i class="fas fa-plus-circle"></i>Add User</a>

</h4>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        
        @if (User.IsInRole("Admin"))
        {
            <th>Action</th>
        }
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        @if (item.IsActive == "Yes")
        {
            <td class="en">
                <span>Enabled</span>
            </td>
        }
        else
        {
            <td class="ds">
                <span>Disabled</span>
            </td>
        }
        @if(User.IsInRole("Admin"))
        {
            <td>
                <a href="@Url.Action("Edit","User",new { id = item.UserId })" class="btn btn-primary btn-edit"><i class="fas fa-pen-square"></i></a> 
          
        </td>
        }
       
    </tr>
}

</table>
